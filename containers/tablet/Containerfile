FROM ghcr.io/ublue-os/aurora:42

COPY ./scripts/install-dev-base.sh /tmp
RUN /tmp/install-dev-base.sh

RUN dnf5 install -y \
  fprintd \
  libcamera \
  libcamera-tools \
  libcamera-gstreamer \
  libcamera-ipa \
  pipewire-plugin-libcamera && \
  dnf5 clean all

