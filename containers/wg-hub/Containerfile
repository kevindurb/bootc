FROM ghcr.io/ublue-os/ucore-minimal:stable@sha256:f2191002b21270085a6dc8e42daef8d395d2e1911e2cc8bb72a0935df2e2a4d5

ARG FILES_ROOT=./containers/wg-hub/files

RUN dnf install -y \
  nebula \
  node-exporter \
  wireguard-tools \
  && dnf clean all

COPY ${FILES_ROOT}/modules.conf /etc/modules-load.d/99-wg.conf
COPY ${FILES_ROOT}/sysctl.conf /etc/sysctl.d/99-wg.conf

RUN bootc container lint
