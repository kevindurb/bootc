FROM ghcr.io/ublue-os/ucore-minimal:stable@sha256:a828277634c709dfc0d5300ffa877ad7ef55fc1eca8849ed63ceaa703c9d6e16

ARG FILES_ROOT=./containers/wg-hub/files

RUN dnf install -y \
  nebula \
  node-exporter \
  wireguard-tools \
  && dnf clean all

COPY ${FILES_ROOT}/modules.conf /etc/modules-load.d/99-wg.conf
COPY ${FILES_ROOT}/sysctl.conf /etc/sysctl.d/99-wg.conf

RUN bootc container lint
