FROM ghcr.io/ublue-os/ucore-minimal:stable@sha256:a92f4237a5f595a2e95355f04052409d024401c3c63be364dcd3ee9c1ae129a9

ARG FILES_ROOT=./containers/wg-hub/files

RUN dnf install -y \
  nebula \
  node-exporter \
  wireguard-tools \
  && dnf clean all

COPY ${FILES_ROOT}/modules.conf /etc/modules-load.d/99-wg.conf
COPY ${FILES_ROOT}/sysctl.conf /etc/sysctl.d/99-wg.conf

RUN bootc container lint
