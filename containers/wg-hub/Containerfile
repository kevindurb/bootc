FROM ghcr.io/ublue-os/ucore-minimal:stable@sha256:9d8e44bf4a7d64c026d5feb9e0d0eb4312ed11bca6f452cb3cccdc5827d43e11

ARG FILES_ROOT=./containers/wg-hub/files

RUN dnf install -y \
  node-exporter \
  wireguard-tools \
  && dnf clean all

COPY ${FILES_ROOT}/modules.conf /etc/modules-load.d/99-wg.conf
COPY ${FILES_ROOT}/sysctl.conf /etc/sysctl.d/99-wg.conf

RUN bootc container lint
