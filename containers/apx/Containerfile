FROM docker.io/library/golang:1.25@sha256:bc45dfd319e982dffe4de14428c77defe5b938e29d9bc6edfbc0b9a1fc171cb3 AS build
WORKDIR /app
# renovate: datasource=github-tags depName=apx packageName=vanilla-os/apx
ARG APX_VERSION=v2.5.0
RUN GOBIN=/app go install github.com/vanilla-os/apx@${APX_VERSION}

FROM scratch
WORKDIR /
COPY --from=build /app/apx .
