FROM ghcr.io/ublue-os/bazzite-deck:stable@sha256:cda6213e2e1df4873885ce6bc59d4422eccffd269dec942f5b67dbc83e5c650d

COPY ./scripts/install-dev-base.sh /tmp
RUN /tmp/install-dev-base.sh && \
  dnf5 install --assumeyes dnf5-plugins && \
  dnf5 install --assumeyes snapd && \
  dnf5 clean all && \
  systemctl enable snapd.service && \
  /usr/bin/ln -sf /var/lib/snapd/snap /

RUN bootc container lint
